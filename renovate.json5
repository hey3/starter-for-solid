{
  extends: ['config:base'],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: ['before 3am on the first day of the month'],
  },
  labels: ['renovate'],
  commitMessagePrefix: 'ci: ',
  vulnerabilityAlerts: {
    labels: ['security'],
  },
  enabledManagers: ['npm', 'github-actions'],
  separateMinorPatch: true,
  patch: {
    automerge: true,
  },
  packageRules: [
    {
      groupName: 'Typescript',
      matchPackageNames: ['typescript'],
    },
    {
      groupName: 'Solid families',
      matchPackageNames: ['solid-js', 'babel-preset-solid'],
    },
    {
      groupName: 'Routing families',
      matchPackageNames: ['solid-app-router'],
    },
    {
      groupName: 'Styling families',
      matchPackageNames: ['tailwindcss', 'postcss', 'autoprefixer'],
    },
    {
      groupName: 'ESLint families',
      matchPackageNames: ['eslint'],
      matchPackagePatterns: ['^eslint', '^@typescript-eslint'],
    },
    {
      groupName: 'Formatter families',
      matchPackageNames: ['prettier'],
    },
    {
      groupName: 'Test families',
      matchPackageNames: ['vitest', 'jsdom'],
    },
    {
      groupName: 'Storybook families',
      matchPackagePatterns: ['^@storybook'],
    },
    {
      groupName: 'Builder families',
      matchPackageNames: ['vite', 'vite-plugin-solid'],
    },
    {
      groupName: 'Babel families',
      matchPackagePatterns: ['^@babel'],
    },
  ],
}
